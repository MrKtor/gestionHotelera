{% extends "base.njk" %}
{% block titulo %}Limpieza | Nueva{% endblock %}
{% block contenido %}
    <h1>Inserci√≥n de nueva limpieza</h1>
    {% if errores.general %}
        <p class="alert alert-danger">{{ errores.general }}</p>
    {% endif %}
    <form action="/limpiezas/{{ idHabitacion }}" method="post">
        <div class="form-group">
            <label for="fecha">Fecha de limpieza:</label>
            {% if errores.fecha %}
                <p class="alert alert-danger">{{ errores.fecha }}</p>
            {% endif %}
            <input type="date" class="form-control" name="fecha" value="{{anyo}}-{{mes}}-{{dia}}"/>
        </div>
        <div class="form-group">
            <label for="observaciones">Observaciones:</label>
            <textarea class="form-control" name="observaciones">{{ datos.observaciones }}</textarea>
        </div>
            <button type="submit" class="btn btn-primary mt-2">Enviar</button>
        </form>
    {% endblock %}